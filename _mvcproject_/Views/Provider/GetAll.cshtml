@model List<ApplicationUser> 
@{
    ViewData["Title"] = "GetAll";
	var images = ViewBag.works ;

}

<h1>Providers</h1>
<div class="fluid-container">
	<div class="row">

		@foreach(var item in Model)
		{
			<div class="col-sm-12 col-md-4">
			<div id="container">	
					<!-- Start	Product details -->
	<div class="product-details">
		
		<!-- 	Product Name -->
	<h1>@item.FirstName @item.LastName</h1>
<!-- 		the Product rating -->
	<span class="hint-star star">
		<i class="fa fa-star" aria-hidden="true"></i>
		<i class="fa fa-star" aria-hidden="true"></i>
		<i class="fa fa-star-half-o" aria-hidden="true"></i>
		<i class="fa fa-star-o" aria-hidden="true"></i>
	</span>
		
	
<!-- The most important information about the product -->
		<p class="information"></p>

		
		
<!-- 		Control -->
<div class="control">
	
<!-- Start Button buying -->
<button class="btn"  data-bs-toggle="modal" data-bs-target="#createOrder" data-url=@Url.Action("Create" , "Order", new { id = @item.Id}) >
		   <span class="buy">Connect</span>
	</button> 
	<!-- End Button buying -->
	
</div>
			
</div>
	
<!-- 	End	Product details   -->
	
	
	
<!-- 	Start product image & Information -->
	
<div class="product-image">
	
	@*<img src="~/images/@item.PreviousWorkPhoto" alt="Omar Dsoky">
	*@






<!-- 	product Information-->
<div class="info">
	<h2>Information</h2>
	<ul>
		<li><strong>Name : </strong>@item.FirstName @item.LastName</li>
		<li><strong>Gender : </strong>@item.Gender</li>
		<li><strong>Email: </strong>@item.Email</li>
		<li><strong>Mobile : </strong>@item.PhoneNumber</li>
		<li><strong>Service: </strong>@item.Service.Service_Name</li>		
        <li><strong>Price Range: </strong>@item.PriceStart - @item.PriceEnd</li>
	</ul>
</div>
</div>
<!--  End product image  -->


			</div>
			</div>

			
	<div id="carouselExampleIndicators" class="carousel slide product-image" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
					@{
					//	var works = images.Where(i=>i.Provider_Id==item.Id).Select(i=>i.ImgPath) ;
					}
	  @foreach(var image in images ){
		  <div class="carousel-item active">
      <img class="d-block w-100" src="~/images/@image" >
    </div>
	  }
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
		}
	
		
	</div>
</div>




