@model IEnumerable<_mvcproject_.Models.ApplicationUser>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mod = Model.First();
    List<ProviderWorks> works = ViewBag.works;
}
   <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
   <div class="row">

                <!-- Inline text elements -->
                <div class="col-8">
                  <div class="card mb-4">
                    <h5 class="card-header">Provider</h5>
                    <div class="card-body">
                      <table class="table ">
                        <tbody>
                          <tr>
                            <td class="align-middle"><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.FirstName)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.FirstName)</p>
                            </td>
                          </tr>
                          <tr>
                            <td class="align-middle"><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.LastName)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.LastName)</p>
                            </td>
                          </tr>
                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.Gender)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.Gender)</p>
                            </td>
                          </tr>
                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.NationalId)</small></td>
                            <td class="py-3">
                              <p class="mb-0">
                               @Html.DisplayFor(modelItem => mod.NationalId)
                              </p>
                            </td>
                          </tr>
                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.PhoneNumber)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.PhoneNumber)</p>
                            </td>
                          </tr>
                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.Service)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.Service.Service_Name)</p>
                            </td>
                          </tr>

                             <tr>
                            <td><small class="text-dark fw-semibold">Price Range</small></td>
                            <td class="py-3">
                              <p class="mb-0">@mod.PriceStart - @mod.PriceEnd</p>
                            </td>
                          </tr>

                        


                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.UserName)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.UserName)</p>
                            </td>
                          </tr>
                          <tr>
                            <td><small class="text-dark fw-semibold"> @Html.DisplayNameFor(model => model.Email)</small></td>
                            <td class="py-3">
                              <p class="mb-0">@Html.DisplayFor(modelItem => mod.Email)</p>
                            </td>
                          </tr>
                       @*   <tr>
                            <td><small class="text-light fw-semibold"> @Html.DisplayNameFor(model => model.FirstName)</small></td>
                            <td>
                              <p><abbr title="attribute">attr</abbr></p>
                              <p class="mb-0"><abbr title="HyperText Markup Language" class="initialism">HTML</abbr></p>
                            </td>
                          </tr>*@
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>



                  <div class="col-md-6 col-lg-4 mb-3">
                  <div class="card h-70">
                    <div class="card-body">
                      <h5 class="card-title">NationalID Image</h5>

                        @if (mod.NationalIdPhoto != null)
                        {
                            <img class="img-fluid" src="~/Images/@Html.DisplayFor(modelItem => mod.NationalIdPhoto)" alt="Card image cap" />
                        }
                    </div>
                  
                  </div>
                </div>

      

          <div class="col-8">
                 

                  <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <ol class="carousel-indicators">
                      <li data-bs-target="#carouselExample" data-bs-slide-to="0" class="active"></li>
                       @for(var i=1 ;i <works.Count;i++)
                        {
                      <li data-bs-target="#carouselExample" data-bs-slide-to="@i"></li>}
@*                      <li data-bs-target="#carouselExample" data-bs-slide-to="2"></li>
*@                    </ol>
                    <div class="carousel-inner">
                         <div class="carousel-item active">
                                <img width="600px" height="600px"  class="d-block w-100" src="~/images/@works[0].ImgPath" alt="First slide" />
                        
                      </div>

                        @for(var i=1 ;i <works.Count;i++)
                        {
                            <div class="carousel-item">
                                <img width="600px" height="600px" class="d-block w-100" src="~/images/@works[i].ImgPath" alt="First slide" />
                        
                      </div>
                        }
                      
               
                    </div>
                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample" role="button" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </a>
                  </div>
                </div>
                

              </div>

              </div>
              </div>