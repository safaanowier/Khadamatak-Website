@model IEnumerable<_mvcproject_.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Orders</h5>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Complaint)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsAccepted)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Message)
                                </th>
                                  <th>
                                    @Html.DisplayNameFor(model => model.price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Provider)
                                </th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var item in Model)
                            {



                                <tr>
                                    <td>
                                        @for (int i = 0; i < item.Rating; i++)
                                        {
                                            <span class="fa fa-star checked"></span>
                                        }

                                        @for (int i = 0; i < 5 - item.Rating; i++)
                                        {
                                            <span class="fa fa-star"></span>
                                        }


                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Complaint)
                                    </td>
                                    <td>
                                          @if (item.IsAccepted == 0)
                                        {
                                            <span class="badge bg-label-primary me-1">Pending</span>
                                        }
                                        @if (item.IsAccepted == 1)
                                        {
                                            <span class="badge bg-label-success me-1">Accepted</span>
                                        }
                                        @if (item.IsAccepted == 2)
                                        {
                                            <span class="badge bg-label-danger me-1">Rejected</span>

                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Message)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provider.FirstName)
                                    </td>

                             
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>